<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Game">


    <TextView android:layout_width="274dp" android:layout_height="90dp"
              android:id="@+id/name"
              android:textStyle="bold" android:textSize="36sp" android:textColor="@android:color/black"
              android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toStartOf="@+id/guideline12" android:layout_marginRight="8dp"
              android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/guideline9"
              android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="8dp"/>


    <android.support.v7.widget.GridLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="72dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline10"
            app:layout_constraintStart_toStartOf="@+id/guideline13" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline14"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp">

        <TextView
                android:layout_width="100dp" android:layout_height="100dp"
                android:id="@+id/g1" app:layout_column="0" app:layout_row="0"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
        />
        <TextView
                android:layout_width="100dp" android:layout_height="100dp"
                android:id="@+id/g2" app:layout_column="1" app:layout_row="0"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
        />
        <TextView
                android:layout_width="100dp" android:layout_height="100dp"
                android:id="@+id/g3" app:layout_column="2" app:layout_row="0"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
        />
        <TextView
                android:layout_width="100dp" android:layout_height="100dp"
                android:id="@+id/g4" app:layout_column="0" app:layout_row="1"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
        />
        <TextView
                android:layout_width="100dp" android:layout_height="100dp"
                android:id="@+id/g5" app:layout_column="1" app:layout_row="1"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
        />
        <TextView
                android:layout_width="100dp" android:layout_height="100dp"
                android:id="@+id/g6" app:layout_column="2" app:layout_row="1"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
        />
        <TextView
                android:text=""
                android:layout_width="100dp" android:layout_height="100dp"
                android:id="@+id/g7" app:layout_column="0" app:layout_row="2"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
        />
        <TextView
                android:layout_width="100dp" android:layout_height="100dp"
                android:id="@+id/g8" app:layout_column="1" app:layout_row="2"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
        />
        <TextView
                android:text=""
                android:layout_width="100dp" android:layout_height="100dp"
                android:id="@+id/g9" app:layout_column="2" app:layout_row="2"
                android:textAlignment="center"
                android:background="@color/colorPrimary"
                android:textStyle="bold"
        />
    </android.support.v7.widget.GridLayout>


    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="-11dp" android:id="@+id/guideline9"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="516dp"
            android:id="@+id/guideline10"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="1dp"
            android:id="@+id/guideline11"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="386dp"
            android:id="@+id/guideline12"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.05" android:id="@+id/guideline13"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.95"
            android:id="@+id/guideline14"/>


</android.support.constraint.ConstraintLayout>